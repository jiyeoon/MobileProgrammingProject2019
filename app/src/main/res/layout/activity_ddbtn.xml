<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DdbtnActivity">

    <ImageView
        android:id="@+id/ddbtn_1image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/one"
        android:visibility="visible"/>
    <ImageView
        android:id="@+id/ddbtn_2image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/two"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/ddbtn_3image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/three"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/ddbtn_4image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/four"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/ddbtn_5image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/five"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/ddbtn_1text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="1번 설명"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:visibility="visible"/>
    <TextView
        android:id="@+id/ddbtn_2text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="2번 설명"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/ddbtn_3text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="3번 설명"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/ddbtn_4text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="4번 설명"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/ddbtn_5text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="5번 설명"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/btn_go_prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이전" />

        <Button
            android:id="@+id/btn_go_home2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="홈으로" />

        <Button
            android:id="@+id/btn_go_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다음" />
    </LinearLayout>

</LinearLayout>