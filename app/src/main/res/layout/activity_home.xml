<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/btn_start_vcr"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="벨크로"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/roundbutton"
        android:backgroundTint="@color/introprogressbar"
        android:layout_margin="7dp"/>
    <Button
        android:id="@+id/btn_start_ddbtn"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="똑딱이"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/roundbutton"
        android:backgroundTint="@color/buttonColor"
        android:layout_margin="7dp"/>
    <Button
        android:id="@+id/btn_start_zipper"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="지퍼"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/roundbutton"
        android:backgroundTint="@color/buttonColor2"
        android:layout_margin="7dp"/>
    <Button
        android:id="@+id/btn_start_stud"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="고리에 끼우는 단추"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="7dp"
        android:background="@drawable/roundbutton"
        android:backgroundTint="@color/buttonColor3"/>
    <Button
        android:id="@+id/btn_start_btn"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="일반 단추(작은 단추)"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/roundbutton"
        android:backgroundTint="@color/introBackground"
        android:layout_margin="7dp"/>
</LinearLayout>